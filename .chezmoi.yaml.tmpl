{{/*
Need to use both homedir and homeDir due to https://github.com/twpayne/chezmoi/issues/463
That seems not to manifest always.
*/}}

{{- with (default (get .chezmoi "homedir")) }}
onepassword:
    command: {{ . }}/.local/bin/op
{{ end -}}

{{- with (default (get .chezmoi "homeDir")) }}
onepassword:
    command: {{ . }}/.local/bin/op
{{ end -}}

{{- $codespaces:= env "CODESPACES" | not | not -}}
sourceDir: {{ .chezmoi.sourceDir }}

data:
    codespaces: {{ $codespaces }}
    private: {{ not $codespaces }}
